				$('.summary-new-time-bids b').html('after ' + timeLimit + ' hours');
			else if (bidLimit > 0)
				$('.summary-new-time-bids b').html('after placing ' + bidLimit + ' bids');
		}

		$(document).ready(function () {
			$('#input-autobid_delay').change(function () {
				$('.summary-interval strong').html($(this).val() + ' seconds');
			});

			$('#input-autobid_time').change(function () {
				val = $(this).find(':selected').val();
				$('.summary-interval b').html('1 bid after every ' + val + ' minute');
			});

			$('#input-autobid_time_limit').change(function () {
				timeLimit = parseInt($(this).find(':selected').val());

				renderSummary();
			});

			$('#input-autobid_bids_limit').change(function () {
				bidLimit = parseInt($(this).find(':selected').val());

				renderSummary();
			});

			$('#input-autobid_status').change(function () {
				if ($(this).prop('checked')) {
					$(this).parents('.form-group').siblings('.form-group').fadeIn(200);
					$('.div-summary').fadeIn(200);
				}
				else {
					$(this).parents('.form-group').siblings('.form-group').fadeOut(200);
					$('.div-summary').fadeOut(200);
				}
			});
		});
	</script>

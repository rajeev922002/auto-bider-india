			if (timeLimit > 0 || bidLimit > 0)
				$('.summary-new-time-bids').show();

			if (timeLimit == -1 && bidLimit == -1)
				$('.summary-current-time-bids').show();
			else if (timeLimit == -1)
				$('.summary-current-time').show();
			else if (bidLimit == -1)
				$('.summary-current-bids').show();

			if (timeLimit > 0 && bidLimit > 0)
				$('.summary-new-time-bids b').html('after ' + timeLimit + ' hours or after placing ' + bidLimit + ' bids, whichever happen first');

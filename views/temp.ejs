function deleteTemplate(event, templateId) {
  // Send AJAX request to server to delete template
  fetch(`/delete/template/${templateId}`, {
    method: 'DELETE',
  })
    .then(response => {
      if (response.ok) {
        // Template deleted successfully, remove row from table
        const row = event.target.closest('tr');
        row.remove();

        // Show alert and reload after 2 seconds
        alert('Template deleted successfully!');
        setTimeout(() => {
          window.location.reload();
        }, 2000);
      } else {
        // Handle error
        console.error('Failed to delete template');
      }
    })
    .catch(error => {
      console.error('Error:', error);
    });
}

            if (event.target.classList.contains('edit-template')) {
                const templateId = event.target.dataset.templateId;
                editTemplate(event, templateId); // Pass event object as a parameter
            }
        });

        document.addEventListener('click', function (event) {
            if (event.target.classList.contains('edit-template')) {
                const templateId = event.target.dataset.templateId;
                editTemplate(templateId);
            }
        });

        // Function to send AJAX request to delete template
        function editTemplate(templateId) {

            const row = document.querySelector(`tr[data-template-id="${templateId}"]`);

            // Extracting data from the row
            const content = row.querySelector('td:nth-child(2) a').textContent.trim(); // Get content
            const skills = Array.from(row.querySelectorAll('td:nth-child(3) .badge')).map(skill => skill.textContent.trim()); // Get skills
            const categoryName = row.querySelector('td:nth-child(1)').textContent.trim(); // Get category name
            const data = {
                content: content,
                skills: skills,
                categoryName: categoryName
            };
            // Send AJAX request to server to delete template
            fetch(`/edit/template/${templateId}`, {
                method: 'post', // Assuming you're updating the template via POST method
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
                .then(response => {
                    if (response.ok) {
                        // Template deleted successfully, remove row from table
                        const row = event.target.closest('tr');
                        row.remove();
                    } else {
                        // Handle error

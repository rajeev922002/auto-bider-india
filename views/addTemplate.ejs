	<script type="text/javascript">
		$(document).ready(function () {
			$('.wildcard-box').click(function () {
				navigator.clipboard.writeText($(this).data('value'))
					.then(() => {
						$('.copied-box').hide();
						$(this).find('.copied-box').fadeIn('400');
						setTimeout(function () {
							$('.copied-box').fadeOut('200');
						}, 800);
					})
					.catch((error) => {
						$('#wildcard-copy-input').val($(this).data('value'));
						var wildcardCopyInput = document.getElementById("wildcard-copy-input")
						wildcardCopyInput.select();
						wildcardCopyInput.setSelectionRange(0, 99999);
						document.execCommand("copy");
						$('.copied-box').hide();
						$(this).find('.copied-box').fadeIn('400');
						setTimeout(function () {
							$('.copied-box').fadeOut('200');
						}, 800);
					});
			});

			$('#btn-check-all-skills').click(function () {
				$('.custom-control-input').prop('checked', true);
			});
			$('#btn-uncheck-all-skills').click(function () {
				$('.custom-control-input').prop('checked', false);
			});

			$('.btn-check-skill-set').click(function () {
				var setSkills = ($(this).data('skills') + '').split(',');
				$('.skill-checkbox').prop('checked', false);
				$.each(setSkills, function (index, val) {
					$('#skill-' + $.trim(val)).prop('checked', true);
				});
			});
		});
	</script>

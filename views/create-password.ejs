        </div>
    </div><!-- end body bg gradient -->

    <section class="flex items-center py-6 px-0 lg:p-10 w-full lg:h-screen">
        <div class="container">
            <div class="backdrop-blur-2xl bg-default-950/40 rounded-2xl overflow-hidden max-w-xl mx-auto">
                <div class="grid lg:grid-cols-1 gap-10">
                    
                    <div class="flex flex-col h-full p-10">
                        <div class="pb-10">
                            <a href="/" class="flex">
                                <h2><image style="height: 30px;" src="/images/bidmanwhite.png"></image></h2>
                            </a>
                        </div>
                        <div class="pb6 my-auto">
                            <h4 class="text-2xl font-bold text-white mb-4">Update Information</h4>
                            <p class="text-default-300 mb-8 max-w-sm ">Update  PhoneNo,Email and Password for loging in.</p>
                            <form class="user" method="POST" action="/create-password">
                                <input type="hidden" name="token" value="<%= token %>">
                                <% if (messages.error) { %>
                                    <div class="alert alert-danger" role="alert">
                                        <%= messages.error %>
                                    </div>
                                <% } %>
                                <div class="form-group">
                                    <input type="text" style="width: 100%; border-radius: 5px; margin-bottom: 5px" class="form-control form-control-user" id="input-phoneNo" name="phoneNo" placeholder="Enter your Phone No" required autofocus="on">
                                </div>
                                <div class="form-group">
                                    <input type="Email" style="width: 100%; border-radius: 5px; margin-bottom: 5px" class="form-control form-control-user" id="input-Email" name="email" placeholder="Enter your Email " required autofocus="on">
                                </div>
                                <div class="form-group">
                                    <input type="password" style="width: 100%; border-radius: 5px; margin-bottom: 5px" class="form-control form-control-user" id="input-password" name="password" placeholder="Enter New Password" required autofocus="on">
                                </div>
                                <div class="form-group">
                                    <input type="password" style="width: 100%; border-radius: 5px; margin-bottom: 5px" class="form-control form-control-user" id="input-confirm-password" name="confirmPassword" placeholder="Confirm New Password" required>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block" style="margin-top: 10px; width: 100%">Create Password</button>
                            </form>
                        </div>
                        <div>
                           
                        </div>
                    </div> <!-- end col -->
                </div> <!-- end grid -->
            </div> <!-- end bg -->
            <div class="w-full text-center mt-5">
                <p class="text-default-300 leading-6 text-base font-medium">Back to login? <a href="/login" class="text-primary font-semibold ms-1">Login</a></p>
            </div>
        </div><!-- end container -->
    </section><!-- end section -->

